<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/StartPageBackgroundColor" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:src="@drawable/startpage_title"
        android:contentDescription="@string/startpage_title_contentDescription"
         />

    <ImageButton
        android:id="@+id/startpage_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="@android:drawable/btn_default_small"
        android:contentDescription="@string/startpage_connect_contentDescription"
        android:src="@drawable/startpage_connect" />

    <ImageButton
        android:id="@+id/startpage_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startpage_connect_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/btn_default_small"
        android:contentDescription="@string/startpage_settings_contentDescription"
        android:src="@drawable/startpage_settings" />

</RelativeLayout>
